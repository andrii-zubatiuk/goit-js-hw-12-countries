<div class="card-container">
    <div class="card-description">
        <h2 class="name-of-country">{{name}}</h2>
        <p class="population"><span class="desc-title">Population:</span> {{population}}</p>
        <p class="capital"><span class="desc-title">Capital:</span> {{capital}}</p>
        <p class="languages"><span class="desc-title">Languages:</span></p>
        <ul class="languages-list">
            {{#each languages}}
                 <li class="languages-list__item">{{name}}</li>
          {{/each}}
        </ul>
    </div>
    <img src="{{flag}}" alt="" width="540"class="flag-of-country">
</div>